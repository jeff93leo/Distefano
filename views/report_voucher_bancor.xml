<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="voucher_bancor_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <t t-call="distefano.voucher_bancor_header" />
            <t t-raw="0" />
        </template>

        <template id="voucher_bancor_header">
            <div class="header">

                <div style="font-size: 110%; position: absolute; top: 2.0cm; left: 1.5cm">
                    Guatemala, <span t-field="o.date"/>
                </div>
                <div style="font-size: 110%; position: absolute; top: 2.0cm; left: 17.2cm">
                    <span t-field="o.amount"/>
                </div>
                <div style="font-size: 110%; position: absolute; top: 2.8cm; left: 2.0cm; width: 20cm">
                    <span t-field="o.partner_id.name"/>
                </div>
                <div style="font-size: 110%; text-transform: uppercase; position: absolute; top: 3.6cm; left: 1.3cm; width: 20cm">
                    <span t-esc="a_letras.num_a_letras(o.amount)"/>
                </div>
                <div style="position: absolute; top: 4.5cm; left: 2.0cm" t-if="o.tipo == 'no negociable'">
                    NO NEGOCIABLE
                </div>

                <div style="position: absolute; top: 8.3cm; left: 1cm">
                    <span t-field="o.reference"/> - <span t-field="o.number"/>
                </div>
                <div style="position: absolute; top: 8.8cm; left: 1cm">
                    <div>
                        <span t-field="o.name"/>
                        <span t-field="o.journal_id.name"/>
                    </div>
                </div>

            </div>
        </template>

        <template id="report_voucher_bancor_document">
            <t t-call="distefano.voucher_bancor_layout">
                <div class="page">
                    <div class="oe_structure"/>

                    <div style="position: absolute; top: 6.5cm; left: 0cm">
                        <table>
                           <tbody>
                                <tr t-foreach="o.move_ids" t-as="l">
                                    <td style="width: 5cm">
                                       <span t-field="l.account_id.code"/>
                                    </td>
                                    <td style="width: 9.5cm">
                                        <span t-field="l.account_id.name"/>
                                    </td>
                                    <td style="width: 2.0cm" class="text-right">
                                        <span t-field="l.debit" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                    <td style="width: 0.5cm">
                                    </td>
                                    <td style="width: 2.0cm" class="text-right">
                                        <span t-field="l.credit" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div style="position: absolute; top: 8.7cm; left: 0cm">
                        <table>
                           <tbody>
                                <tr>
                                    <td style="width: 14.5cm">
                                    </td>
                                    <td style="width: 2cm" class="text-right">
                                        <span t-esc="totales(o)['debito']" t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                    <td style="width: 0.5cm">
                                    </td>
                                    <td style="width: 2cm" class="text-right">
                                        <span t-esc="totales(o)['credito']" t-esc-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div style="position: absolute; top: 8.7cm; left: 2.5cm">
                        <table>
                           <tbody>
                                <tr>
                                    <td style="width: 6cm">
                                        <span t-field="user.name"/>
                                    </td>
                                    <td style="width: 16cm">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <template id="report_voucher_bancor">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'distefano.report_voucher_bancor_document')"/>
                </t>
            </t>
        </template>

    </data>
</openerp>
