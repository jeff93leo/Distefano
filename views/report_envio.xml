<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="envio_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <t t-call="distefano.envio_header" />
            <t t-raw="0" />
        </template>

        <template id="envio_header">
            <div class="header">
                <div class="row">
                    <div class="col-xs-6">
                        Vogue Design S.A.
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                        Impreso por: <span t-field="user.name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <strong>#: <span t-field="o.name"/></strong>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                        Impreso el: <span t-esc="fecha()"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        De: <span t-field="o.location_id.complete_name"/>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                        Para: <span t-esc="o.location_dest_id.complete_name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        Enviado el: <span t-field="o.date_done"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        Origen: <span t-field="o.origin"/>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                        <t t-if="o.partner_id">
                            Empresa: <span t-esc="o.partner_id.name"/>
                        </t>
                    </div>
                </div>

            </div>
        </template>

        <template id="report_envio_document">
            <t t-call="distefano.envio_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <td>
                                        Codigo
                                    </td>
                                    <td>
                                        Producto
                                    </td>
                                    <td>
                                        Cantidad
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.move_lines" t-as="l">
                                    <td>
                                        <span t-field="l.product_id.default_code"/>
                                    </td>
                                    <td>
                                        <span t-field="l.product_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="l.product_qty"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                    </td>
                                    <td>
                                       Total:
                                    </td>
                                    <td>
                                        <span t-esc="total_cantidades(o)"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="col-xs-5 col-xs-offset-1">
                        Notas: <span t-esc="o.note"/>
                        </div>

                        <br></br>
                        <br></br>
                        <br></br>
                        <br></br>
                        <br></br>
                        <br></br>

                         <table align="center" class="table table-condensed">
                            <thead align= "center">
                                <tr>
                                    <td>
                                        ______________<br>Creado</br>
                                    </td>
                                    <td>
                                        ______________<br>Recibido</br>
                                    </td>
                                    <td>
                                        ______________<br>Transportado</br>
                                    </td>
                                    <td>
                                        ______________<br>Visto Bueno</br>
                                    </td>
                                </tr>
                            </thead>
                        </table>

                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <template id="report_envio">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'distefano.report_envio_document')"/>
                </t>
            </t>
        </template>

    </data>
</openerp>
